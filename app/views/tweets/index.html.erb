<section class="section">
  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to "Twitter Clone", root_path, class: "navbar-item is-size-1"%>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-
        expanded="false" data-target="navbarBasicExample">

          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to "New Tweet", new_tweet_path, class: "button is-primary has-text-weight-bold" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</section>

<h1>Twitter Clone</h1>

<%= link_to "New Tweet", new_tweet_path %>

<ul>
<% @tweets.each do |tweet| %>
  <li>
      <%= link_to tweet.body, tweet_path(tweet) %>
      <%= link_to "Edit", edit_tweet_path(tweet) %>
      <%= link_to "Delete", tweet_path(tweet), method: :delete,
        data: {
          confirm: "Are you sure you want to delete this article?"
        }
      %>
  </li>
<% end %>
</ul>
